<%= form_for(@article) do |f| %>
    <% if @article.errors.any? %>
        <ul>
            <% @article.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    <% end %>

    <p>
        <%= f.label :title %>
        <%= f.text_field :title %>  
    </p>
    <p>
        <%= f.label :body %>
        <%= f.text_area :body %>
    </p>

    <%= f.submit %>
<% end %>